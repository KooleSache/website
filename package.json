{
  "name": "colorsnapper.com",
  "version": "0.0.0",
  "private": true,
  "description": "ColorSnapper Public Website",
  "main": "",
  "scripts": {
    "start": "DEBUG=metalsmith:* babel-node index.js",
    "build": "NODE_ENV=production babel-node index.js",
    "clean": "rm -rf _site/",
    "deploy": "surge _site -d colorsnapper.com",
    "test": "npm run lint",
    "lint": "npm run lint:js",
    "lint:js": "eslint .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "production": "npm run clean && npm run build && npm run deploy",
    "staging": "npm run clean && npm run build && surge _site -d cs2-test.surge.sh",
    "imageoptim": "imageoptim --directory ./img -a -q && imageoptim --directory ./_images -a -q",
    "svgo": "svgo -f ./_images",
    "deps": "npm-check -s",
    "deps:update": "npm-check -u"
  },
  "author": "Andrey Okonetchnikov",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015",
      "stage-1"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-okonet"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": "jsonlint"
  },
  "config": {
    "ghooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "browser-sync": "^2.12.10",
    "eslint": "^3.10.2",
    "eslint-config-okonet": "1.2.1",
    "expect": "^1.20.1",
    "file-loader": "^0.9.0",
    "ghooks": "^1.3.2",
    "gulp": "^3.8.11",
    "gulp-util": "^3.0.4",
    "imageoptim-cli": "^1.11.6",
    "jsonlint": "^1.6.2",
    "lint-staged": "^3.2.1",
    "mocha": "^3.2.0",
    "npm-check": "^5.4.0",
    "surge": "^0.18.0",
    "svgo": "^0.7.1"
  },
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-1": "^6.5.0",
    "css-loader": "^0.26.0",
    "easypattern": "0.0.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "handlebars": "^4.0.5",
    "metalsmith": "^2.1.0",
    "metalsmith-assets": "^0.1.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-debug": "1.1.0",
    "metalsmith-define": "^2.0.1",
    "metalsmith-in-place": "^1.4.4",
    "metalsmith-layouts": "^1.6.5",
    "metalsmith-markdownit": "^0.4.0",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-remote-json-to-files": "^1.0.0",
    "metalsmith-serve": "0.0.7",
    "metalsmith-watch": "^1.0.2",
    "metalsmith-webpack": "github:okonet/metalsmith-webpack",
    "metalsmith-webpack-dev-server": "^1.0.0",
    "postcss-calc": "^5.2.1",
    "postcss-loader": "^1.1.1",
    "postcss-scss": "^0.4.0",
    "precss": "^1.4.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.5",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.8.0"
  }
}
