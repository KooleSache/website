<script type="text/javascript">
$(document).ready(function() {
  $('.js-loupe').loupe();

  $("#slider").slider({
    min: 2,
    max: 9,
    step: 1,
    value: 5,
    slide: function(event, ui){
      $('.b-slide__item').hide();
      $('.b-slide__item_' + ui.value).show();
    },
    create: function(event, ui){
      $('.b-slide__item_5').show();
    }
  });

  $('video').simpleVideo({
    onPlay: function(elements){
      elements.overlay.fadeOut();
      _gaq.push(['_trackPageview', '/video'])
    }
  });
});
</script>

