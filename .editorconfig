root = true

[*]
indent_style = space
indent_size = 2
continuation_indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
quote_type = single
spaces_around_operators = true

[*.{scss,css,html}]
quote_type = double

[*.{html,json}]
quote_type = double

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2
